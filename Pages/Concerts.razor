@page "/concerts"
@* This Razor page allows users to search for songs using the Spotify API.
   The page contains an input field for the search query, a search button, and a list to display the search results. *@
@inject SpotifyService _spotifyService
@using SpotifyApp.Services
@using blazorappca.Models

<h1>Concert Information</h1>

@if (ConcertData != null)
{
    <div>
        <h2>Concert</h2>
        <p>Artists: @ConcertData.Artists</p>
        <p>Upcoming Concerts: @ConcertData.UpcomingConcerts</p>
        <p>Color: @ConcertData.Color</p>
        <p>Header Image Uri: @ConcertData.HeaderImageUri</p>
        <p>Upcoming Concerts Source: @ConcertData.UpcomingConcertsSource</p>
        <p>User Location: @ConcertData.UserLocation</p>
        <p>Ticket Availability: @ConcertData.TicketAvailability</p>
        <p>Ticket Availability Translated: @ConcertData.TicketAvailabilityTranslated</p>
    </div>
}
else
{
    <p>Loading...</p>
}


@code {
    private ConcertData ConcertData { get; set; }
    private string concertResponse;

    protected override async Task OnInitializedAsync()
    {
        // Fetch concert data from ConcertService
         concertResponse = await _spotifyService.ExploreConcerts();

    }
}
